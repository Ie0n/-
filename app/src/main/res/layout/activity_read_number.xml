<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.feng.version1.Task.ReadNumber">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/read_img"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:src="@drawable/yuyinback"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/xinlvvv1"
        android:layout_alignTop="@id/resultnum"/>
    <TextView
        android:id="@+id/resultnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textSize="45dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@drawable/con_textview"
        android:layout_marginTop="100dp"
        />
    <TextView
        android:id="@+id/device_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="设备ID"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@id/resultnum"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tab_read"
        android:layout_below="@id/device_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="表计ID"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/edit_nn"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/edit_nn"
        android:text="00.0"
        android:textSize="20dp" />

    <EditText
        android:layout_centerHorizontal="true"
        android:id="@+id/edit_nn"
        android:layout_below="@id/tab_read"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:background="@drawable/conner_editview"
        android:hint="输入表计值"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/edit_nn"
        android:layout_toRightOf="@id/edit_nn"
        android:layout_marginLeft="20dp"
        android:text="00.0"
        android:textSize="20dp" />


    <Button
        android:layout_below="@id/read_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/yuyin"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:focusableInTouchMode="false"
        android:background="@drawable/speeching"
        android:layout_alignLeft="@id/low"/>

    <Button
        android:layout_below="@id/read_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/textinput"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:focusableInTouchMode="false"
        android:background="@drawable/shidi2"
        android:layout_alignRight="@id/top"/>




</RelativeLayout>
