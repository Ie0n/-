<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/denglu2"
        android:scaleType="fitXY" />


    <EditText
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:textSize="15dp"
        android:id="@+id/username_edit"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:singleLine="true"
        android:hint="账号"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:textColor="@color/white"
        android:background="@drawable/conner_editview"/>

    <ImageView
        android:id="@+id/tubiao_1"
        android:layout_marginTop="130dp"
        android:layout_width="60dp"
        android:layout_alignLeft="@id/username_edit"
        android:layout_height="60dp"/>
        <!--android:src="@drawable/ic_favorite_white_24dp"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tubiao_1"
        android:layout_toRightOf="@id/tubiao_1"
        android:text="仪表数据存取"
        android:textColor="@color/white"
        android:textSize="30dp" />




    <EditText
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:layout_below="@id/username_edit"
        android:id="@+id/password_edit"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:textSize="15dp"
        android:hint="密码"
        android:password="true"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textColor="@color/white"
        android:background="@drawable/conner_editview"/>
    <!--
    <CheckBox
